<body>
  <!-- <slot /> -->
  <section id="page">
    <div class="tri">
      <>
        {
          data.map((item, i) => {
            return (
              <div class="triangleSectionContainer">
                <Triangle id={i} className="triangle" />
                <div class="centered">{item.title}</div>
              </div>
            );
          })
        }
      </>`

